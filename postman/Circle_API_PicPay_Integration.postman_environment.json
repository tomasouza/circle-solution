      "enabled": true,
      "type": "default"
    },
    {
      "key": "settlement_id",
      "value": "",
      "description": "Stores settlement ID from previous requests",
      "enabled": true,
      "type": "default"
    },
    {
      "key": "transfer_id",
      "value": "",
      "description": "Stores transfer ID from previous requests",
      "enabled": true,
      "type": "default"
    },
    {
      "key": "user_id",
      "value": "picpay-user-12345",
      "description": "Sample PicPay User ID for testing",
      "enabled": true,
      "type": "default"
    }
  ],
  "_postman_variable_scope": "environment"
}

