{
  "id": "circle-picpay-sandbox-env",
  "name": "Circle PicPay Integration - Sandbox",
  "values": [
    {
      "key": "circle_base_url",
      "value": "https://api-sandbox.circle.com",
      "description": "Circle Sandbox API Base URL",
      "enabled": true,
      "type": "default"
    },
    {
      "key": "circle_api_key",
      "value": "SAND_API_KEY:your-sandbox-api-key-here",
      "description": "Circle Sandbox API Key - Replace with your actual key",
      "enabled": true,
      "type": "secret"
    },
    {
      "key": "picpay_wallet_id",
      "value": "1000066041",
      "description": "PicPay Master Wallet ID in Circle",
      "enabled": true,
      "type": "default"
    },
    {
